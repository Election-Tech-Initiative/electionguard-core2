<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ElectionGuard.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ElectionGuard.UI"
    xmlns:view="clr-namespace:ElectionGuard.UI.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate view:LoginPage}"
        Route="LoginPage" />
    <ShellContent
        Title="Admin Home"
        ContentTemplate="{DataTemplate view:AdminHomePage}"
        Route="AdminHomePage" />
    <ShellContent
        Title="Guardian Home"
        ContentTemplate="{DataTemplate view:GuardianHomePage}"
        Route="GuardianHomePage" />

</Shell>
