<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase x:TypeArguments="viewModels:ElectionViewModel" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       x:Class="ElectionGuard.UI.Views.ElectionPage"
                       xmlns:helper="clr-namespace:ElectionGuard.UI.Helpers"
                       xmlns:viewModels="clr-namespace:ElectionGuard.UI.Lib.ViewModels;assembly=ElectionGuard.UI.Lib"
                       xmlns:views="using:ElectionGuard.UI.Views"
                       x:DataType="viewModels:ElectionViewModel"
                       ControlTemplate="{StaticResource PageTemplate}">
    <Grid ColumnDefinitions="2*, *, *" Margin="20">
        <VerticalStackLayout Grid.Column="0">
            <Label Style="{StaticResource H1}"
                   Text="{Binding CurrentElection.Name}" />
            <Grid ColumnDefinitions="*, *">
                <StackLayout Style="{StaticResource FormControl}" Grid.Column="0">
                    <Label Style="{StaticResource FormLabel}" Text="{helper:Translate GuardiansText}"></Label>
                    <Label Style="{StaticResource FormValue}" Text="3"></Label>
                </StackLayout>
                <StackLayout Style="{StaticResource FormControl}" Grid.Column="1">
                    <Label Style="{StaticResource FormLabel}" Text="{helper:Translate QuorumText}"></Label>
                    <Label Style="{StaticResource FormValue}" Text="3"></Label>
                </StackLayout>
            </Grid>
            <StackLayout Style="{StaticResource FormControl}">
                <Label Style="{StaticResource FormLabel}" Text="{helper:Translate ElectionUrl}"></Label>
                <Label Style="{StaticResource FormValue}" Text="http://electionguard.vote"></Label>
            </StackLayout>
            <StackLayout Style="{StaticResource FormControl}">
                <Label Style="{StaticResource FormLabel}" Text="{helper:Translate CreatedText}"></Label>
                <Label Style="{StaticResource FormValue}" Text="Nov 28, 2022"></Label>
            </StackLayout>
            <Label Style="{StaticResource H2}"
                   Text="{helper:Translate BallotsText}" />
            <Button Text="{helper:Translate AddBallots}"
                    Style="{StaticResource NarrowWidth}" />
            <CollectionView />
            <Label Style="{StaticResource H2}"
                   Text="{helper:Translate TalliesText}" />
            <Button Text="{helper:Translate CreateTally}"
                    Style="{StaticResource NarrowWidth}" />
            <CollectionView />

        </VerticalStackLayout>
        <VerticalStackLayout Grid.Column="1">
            <Label Style="{StaticResource H1}"
                   Text="{helper:Translate ManifestText}" />
            <StackLayout Style="{StaticResource FormControl}">
                <Label Style="{StaticResource FormValue}"
                       Text="Sample County, 2020 General Election" />
            </StackLayout>
            <Grid ColumnDefinitions="*, *">
                <StackLayout Grid.Column="0" Style="{StaticResource FormControl}">
                    <Label Style="{StaticResource FormLabel}" Text="{helper:Translate PartiesText}" />
                    <Label Style="{StaticResource FormValue}" Text="7" />
                </StackLayout>
                <StackLayout Grid.Column="1" Style="{StaticResource FormControl}">
                    <Label Style="{StaticResource FormLabel}" Text="{helper:Translate CandidatesText}" />
                    <Label Style="{StaticResource FormValue}" Text="76" />
                </StackLayout>
            </Grid>
            <Grid ColumnDefinitions="*, *">
                <StackLayout Grid.Column="0" Style="{StaticResource FormControl}">
                    <Label Style="{StaticResource FormLabel}" Text="{helper:Translate ContestsText}" />
                    <Label Style="{StaticResource FormValue}" Text="15" />
                </StackLayout>
                <StackLayout Grid.Column="1" Style="{StaticResource FormControl}">
                    <Label Style="{StaticResource FormLabel}" Text="{helper:Translate BallotStylesText}" />
                    <Label Style="{StaticResource FormValue}" Text="2" />
                </StackLayout>
            </Grid>
            <StackLayout Style="{StaticResource FormControl}">
                <Label Style="{StaticResource FormLabel}" Text="{helper:Translate GeopoliticalUnitsText}" />
                <Label Style="{StaticResource FormValue}" Text="2" />
            </StackLayout>
        </VerticalStackLayout>
        <VerticalStackLayout Grid.Column="2">
            <Label Style="{StaticResource H2}"
                Text="{helper:Translate ElectionChecklist}" />
        </VerticalStackLayout>
    </Grid>
</views:ContentPageBase>