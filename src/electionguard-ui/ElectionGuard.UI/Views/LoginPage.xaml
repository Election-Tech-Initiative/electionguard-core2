<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helper="clr-namespace:ElectionGuard.UI.Helpers"
             x:Class="ElectionGuard.UI.Views.LoginPage"
             Title="{helper:Translate UserLogin}"
             xmlns:viewModels="clr-namespace:ElectionGuard.UI.Lib.ViewModels;assembly=ElectionGuard.UI.Lib"
             x:DataType="viewModels:LoginViewModel"
             ControlTemplate="{StaticResource PageTemplate}">
    <VerticalStackLayout Style="{StaticResource NarrowCenteredPage}" Margin="0,100,0,0">
        <Label Style="{StaticResource FormLabel}"
               Text="{helper:Translate UserID}" />
        <Entry Placeholder="{helper:Translate LoginPlaceholder}" Text="{Binding Name}" />
        <Button Text="{helper:Translate LoginText}" Command="{Binding LoginCommand}" />
    </VerticalStackLayout>
</ContentPage>