<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase x:TypeArguments="viewModels:AdminHomeViewModel" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       x:Class="ElectionGuard.UI.Views.AdminHomePage"
                       xmlns:helper="clr-namespace:ElectionGuard.UI.Helpers"
                       xmlns:model="clr-namespace:ElectionGuard.UI.Lib.Models;assembly=ElectionGuard.UI.Lib"
                       xmlns:controls="clr-namespace:ElectionGuard.UI.Controls"
                       xmlns:viewModels="clr-namespace:ElectionGuard.UI.ViewModels"
                       xmlns:views="using:ElectionGuard.UI.Views"
                       x:DataType="viewModels:AdminHomeViewModel"
                       ControlTemplate="{StaticResource PageTemplate}">
    <VerticalStackLayout Style="{StaticResource NarrowCenteredPage}">
        <Label Style="{StaticResource H1}" Text="{helper:Translate AdminHomePageTitle}" />
        <Button Style="{StaticResource FullWidth}" Text="{helper:Translate CreateElection}" Command="{Binding CreateElectionCommand}" />
        <Button Style="{StaticResource FullWidth}" Text="{helper:Translate GoToCreateKeyCeremonyAdmin}" Command="{Binding GoKeyCeremonyCommand}" />
        <Label Style="{StaticResource H2}" Text="{helper:Translate ElectionsText}" />

        <CollectionView ItemsSource="{Binding Elections}" SelectedItem="{Binding CurrentElection}" 
                        SelectionChangedCommand="{Binding SelectionChangedCommand}" SelectionMode="Single">
            <CollectionView.EmptyView>
                <controls:NoContentView Text="{helper:Translate NoElections}" />
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Election">
                    <Frame Style="{StaticResource ButtonishFrame}">
                        <Label Style="{StaticResource ButtonishLabel}" Text="{Binding Name}"/>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</views:ContentPageBase>
