{
    "compilerOptions": {
      "target": "ES2021",
      "module": "commonjs",
      "moduleResolution": "Node",
      "strict": true,
      "allowJs": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "outDir": "dist",
      "skipLibCheck": true,
      "declaration": true,
      "forceConsistentCasingInFileNames": true,
    },
    "include": [ "./bindings/typescript/src/**/*.ts", 
    "./bindings/typescript/src/**/*.d.ts"],
    "exclude": ["node_modules", "dist"],
  }
  